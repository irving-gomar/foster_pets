<% @services.each do |service| %>

<div>
  <%= service.id %>
  <%= service.activity %>
  <%= service.price %>
  <%= service.description %>
  <%= service.user_id %>
  <%= link_to "Edit", edit_service_path(service.id), class: 'btn btn-info' %>
  <%= link_to "Delete", service_path(service.id), data:{turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'btn btn-danger' %>
  
  <%= link_to 'Create New booking', new_service_booking_path(service.id), class: 'btn btn-primary' %>
</div>
<% end %>

<%= link_to 'Create New Service', new_service_path, class: 'btn btn-primary' %>
