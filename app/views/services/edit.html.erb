<div class="container">
  <h2>Edit Activity</h2>

  <%= simple_form_for(@service) do |f| %>
    <%= f.input :activity, :collection => %w["Walking", "Styling", "Medication", "Feeding" "Babysitting"] %>
    <%= f.input :price %>
    <%= f.input :description %>
    <%= f.button :submit %>
  <% end %>

  <%= link_to 'Back', services_path, class: 'btn btn-secondary mt-3'%>
</div>
